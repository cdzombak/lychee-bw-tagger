# Lychee Black & White Tagger Configuration

database:
  host: localhost
  port: 3306
  username: lychee_user
  password: your_password_here
  database: lychee

# Tolerance for grayscale detection (0.0 to 1.0, where 0.0 is strict and 1.0 is very permissive)
grayscale_tolerance: 0.1

# Base URL for accessing image files (the /uploads/ path is added automatically)
image_base_url: "https://your-lychee-instance.com"